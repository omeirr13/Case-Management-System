@using Case_Management_System.Models;
@model Tuple<Lawyer, Service>;



@{
    Layout = "_Layout";
    Lawyer l = Model.Item1;
    Service s = Model.Item2;
}
@section Styles{
    <link href="/css/login.css" rel="stylesheet" />
    <link href="/css/lawyerInfo.css" rel="stylesheet" />
}

<div class="container-fluid page-header mb-3 p-0">
	<div class="container-fluid page-header-inner py-5">
		<div class="container text-center pb-5">
			<h1 class="display-3 text-white mb-3 animated slideInDown">Lawyer Info</h1>
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb justify-content-center text-uppercase">
							<li class="breadcrumb-item"><a href="#">@s.Title</a></li>
							<li class="breadcrumb-item"><a href="#">@l.LawyerName</a></li>
						</ol>
			</nav>
		</div>
	</div>
</div>

<div class="container-xxl py-5">
    <div class="container">

        <div style="display:flex;justify-content:center">
            <h5 class="section-title text-center text-primary text-uppercase mb-5">Lawyer Info</h5>

        </div>
        <div style="display:flex; justify-content:center">

            <div style="margin-top:20px">
                <h3 class="mb-5">Name: <span class="text-primary text-uppercase">@l.LawyerName</span></h3>
                <h3 class="mb-5">Specialization: <span class="text-primary text-uppercase">@s.Title</span></h3>
                <h3 class="mb-5">Rate: <span class="text-primary text-uppercase">$@l.Rate</span></h3>
            </div>

            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s" style="margin-bottom:70px">
                        <div class="service-icon bg-transparent">
                            <div class="w-100 h-100 d-flex align-items-center justify-content-center ml-3" >
                                <img src="~/person.png" style="width:55%">
                            </div>
                        </div>
            </div>

            </div>
            <div style="display:flex;justify-content:center;">
                <form method="post" action="/Payment/Payment">
                <button style="margin-bottom:40px" name="LawyerId" value="@l.Id">Hire Lawyer</button>
                    </form>
                </div>


    </div>

        @await Component.InvokeAsync("Rating", new {LawyerId = l.Id});
</div>
