@model int
@{
	Layout = "_Layout";
}

@section Styles{
    <link href="/css/review.css" rel="stylesheet" />
}
<div class="container-fluid page-header mb-3 p-0">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center pb-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Leave a review</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center text-uppercase">
                    @*<li class="breadcrumb-item"><a href="#">@Model.LawyerName</a></li>*@
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="main">
    <div class="containerr" style="display:block">
        <div style="display:flex;justify-content:center">
        <div class="heading">
        <h1 style="margin-left:33px;margin-bottom:30px">Leave a review</h1>
            <form id="feedback" action="/Review/Review" method="post">
                <div class="pinfo">Your personal info</div>

                <div class="pinfo">Rate our overall services.</div>

                <div class="form-group">
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-heart"></i></span>
                                <select class="form-control" name="Rating1" id="Rating1" required>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="pinfo">Write your feedback.</div>


                <div class="form-group">
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-pencil"></i></span>
                                <textarea class="form-control" id="RatingText" name="RatingText" rows="3" required></textarea>

                        </div>
                    </div>
                </div>

                <div style="display:flex;justify-content:center">

                <button type="submit" class="btn btn-primary" name="LawyerId" value="@Model">Submit</button>
                </div>


            </form>
            
        </div>
        </div>
    </div>
</div>