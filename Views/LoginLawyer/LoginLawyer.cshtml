@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers;

@using Case_Management_System.Models;
@*@model User;*@
@{
	Layout = "_Layout";
	ViewData["Title"] = "Login Lawyer";
}

@section Styles{
     <link href="/css/login.css" rel="stylesheet" />
}
        <!-- Page Header Start -->
        <div class="container-fluid page-header mb-5 p-0" style="background-image: url(img/carousel-1.jpg);">
            <div class="container-fluid page-header-inner py-5">
                <div class="container text-center pb-5">
                    <h1 class="display-3 text-white mb-3 animated slideInDown">Login/Signup Lawyer</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center text-uppercase">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item text-white active" aria-current="page">Login</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <!-- Page Header End -->
        <!-- Login Start -->
		<div style="display:flex;justify-content:center; margin-bottom:110px">
            <div class="containerLogin" id="containerLogin" style="display:flex;justify-content:center;">
			<div class="form-container sign-up-container" style="padding:40px 0;" >
				<form method="post" action="/LoginLawyer/LoginLawyer">
					<div asp-validation-summary="All"></div>
					@if (!ViewData.ModelState.IsValid)
					{
						<p class="error">
							Error: Please correct the following errors:
							<ul class="error">
								@foreach (var field in ViewData.ModelState)
								{
									if (field.Value.Errors.Any())
									{
										<li>@Html.ValidationMessage(field.Key)</li>
									}
								}
							</ul>
						</p>
					}
					<h1>Log In Lawyer</h1>
					<input type="email" placeholder="Lawyer Email" id="LawyerEmail" name="LawyerEmail" />
					<input type="text" placeholder="Lawyer Password" id="LawyerPassword" name="LawyerPassword" />
					<button style="margin-top:20px">Log in</button>
				</form>
			</div>
		</div>
	</div>



@section Scripts{
		 <script src="/js/login.js"></script>
}