@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers;

@using Case_Management_System.Models;
@model List<Service>
@*@model User;*@
@{
	Layout = "_Layout";
	ViewData["Title"] = "Signup Lawyer";
}

@section Styles{
	<link href="/css/signup.css" rel="stylesheet" />
}
<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 p-0" style="background-image: url(img/carousel-1.jpg);">
	<div class="container-fluid page-header-inner py-5">
		<div class="container text-center pb-5">
			<h1 class="display-3 text-white mb-3 animated slideInDown">Login/Signup</h1>
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb justify-content-center text-uppercase">
				</ol>
			</nav>
		</div>
	</div>
</div>
<!-- Page Header End -->
<!-- Login Start -->
<div style="display:flex;justify-content:center; margin-bottom:110px">
	<div class="containerLogin" id="containerLogin" style="display:flex;justify-content:center;">
		<div class="form-container sign-up-container" style="padding:40px 0;">
			<form method="post" action="/SignupLawyer/SignupLawyer">
				<div asp-validation-summary="All"></div>
				@if (!ViewData.ModelState.IsValid)
				{
					<p class="error">
						Error: Please correct the following errors:
						<ul class="error">
							@foreach (var field in ViewData.ModelState)
							{
								if (field.Value.Errors.Any())
								{
									<li>@Html.ValidationMessage(field.Key)</li>
								}
							}
						</ul>
					</p>
				}
				<h1>Create Lawyer Account</h1>
				<div class="social-container">
					<a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
				</div>
				<span>or use your email for registration</span>
				<input type="text" placeholder="Name" id="LawyerName" name="LawyerName" />
				<input type="email" placeholder="Email" id="LawyerEmail" name="LawyerEmail" />
				<input type="number" placeholder="Hourly Rate" id="rate" name="rate" />
				<input type="text" placeholder="Password" id="LawyerPassword" name="LawyerPassword" />
				<input type="text" placeholder="Repeat Password" id="repeatPassword" name="repeatPassword" />
				
				@await Component.InvokeAsync("ServiceList");
				<button style="margin-top:20px">Sign Up</button>


			</form>
		</div>
		@*<div class="form-container sign-in-container">
		<form action="#">
		<h1>Sign in</h1>
		<div class="social-container">
		<a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
		</div>
		<span>or use your account</span>
		<input type="email" placeholder="Email" />
		<input type="password" placeholder="Password" />
		<a href="#" style="margin-top:10px">Forgot your password?</a>*@
		</form>
	</div>
</div>
</div>
<!-- Contact End -->
@section Scripts{
	<script src="/js/login.js"></script>
}